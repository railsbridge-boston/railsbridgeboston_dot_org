<div id="ml_embed_signup">
  <form action="<%= signup_form_url %>" method="post" name="mc-embedded-subscribe-form" target="_blank">
    <div class="input-group">
      <input type="text" placeholder="First" value="" name="first_name" class="" id="first-name">
    </div>
    <div class="input-group" style="float: right;">
      <input type="text" placeholder="Last" value="" name="last_name" class="" id="last-name">
    </div>
    <div>
      <input type="email" placeholder="me@example.com" value="" name="email" class="required email" id="email">
    </div>
    <div class="clear"><input type="submit" value="Get updates" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
  </form>
</div>
